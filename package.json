{
  "name": "github-snooze-chrome-extension",
  "version": "1.0.0",
  "description": "GitHub Snooze Chrome Extension",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "watch": "nodemon --ignore app --ignore src/index.dist.js --exec \"npm run buildplugin && npm run buildworker && npm run buildscreens\"",
    "lint": "eslint .",
    "prepare": "husky install",
    "buildplugin": "browserify src/index.js -p esmify > app/gh-snooze.js && npx babel app/gh-snooze.js --out-file app/gh-snooze.js",
    "buildworker": "browserify src/background.js -p esmify > app/background.js",
    "buildscreens": "cp -r src/screens/* app/screens/",
    "pack": "npm run buildplugin && npm run buildworker && npm run buildscreens"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/github-snooze-chrome-extension.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/github-snooze-chrome-extension/issues"
  },
  "homepage": "https://github.com/nearform/github-snooze-chrome-extension#readme",
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "browserify": "^17.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esmify": "^2.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  }
}
