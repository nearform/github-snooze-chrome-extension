{
  "name": "GitHub Snooze",
  "description": "Receive a notification when there are Issues or PRs updates",
  "version": "1.8.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "GitHub Snooze",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "background",
    "notifications"
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}